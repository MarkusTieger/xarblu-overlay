		doins ${S}/utils/completions/${PN}.fish
	fi

	#fix systemd-service bin-path
	sed -i -e "s|\/usr\/bin\/||" ${S}/utils/pueued.service

	#install the system-service
	systemd_douserunit ${S}/utils/pueued.service
}
