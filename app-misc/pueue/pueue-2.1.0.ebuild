	mkdir -p ${S}/utils/completions

	#install shell completion files
	if use bash-completion; then
		${ED}/usr/bin/pueue completions bash ${S}/utils/completions
		newbashcomp ${S}/utils/completions/${PN}.bash ${PN}
	fi

